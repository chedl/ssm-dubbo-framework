	private static  int bean = 80;
	public void run(){
		while (true) {
			synchronized(this) {
				String s = Thread.currentThread().getName();
				if (bean == 0) {
					throw  new RuntimeException("Ã»¶¹ÁË");
				}
				bean --;
				System.out.println(s + " " + bean);
				Thread.yield();
			}
		}
}

		public static void main(String[] args) {
//			Task taska = new Task();
			Test t1 = new Test();
			Test t2 = new Test();
			t1.start();
			t2.start();
		}
}